    <h2 class="title">New Task</h2>

    <form action="{{ '/tasks/' + task.id + '?_method=PUT' }}" method="POST">
      {{ csrfField() }}

      <div class="field">
        <label class="label">Title</label>
        <div class="control">
        <input class="input" type="text" placeholder="Title" name="title" required autocomplete="off" value="{{ task.title }}">
